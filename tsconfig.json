{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "data/",
        "lang/*.json",
        "lang/messages.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}